@model QuizCart.Models.AssessmentDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="text-center">
    <h2 class="text-center">Are you sure you want to delete this assessment?</h2>
</div>

<div class="text-center mb-4">
    <p class="text-primary">Title:@Model.Title</p>
</div>

<div class="container mb-4">
    <h5 class="text-center mb-3">Assessment Details</h5>
    <ul class="list-group w-50 mx-auto text-left">
        <li class="list-group-item"><strong>Date:</strong> @Model.DateOfAssessment.ToString("yyyy-MM-dd")</li>
        <li class="list-group-item"><strong>Difficulty:</strong> @Model.DifficultyLevel</li>
        <li class="list-group-item"><strong>Description:</strong> @Model.Description</li>
        <li class="list-group-item"><strong>Subject:</strong> @Model.SubjectName</li>
        <li class="list-group-item"><strong>Members:</strong> @string.Join(", ", Model.MemberNames)</li>
    </ul>
</div>

<div class="text-center">
    <form asp-action="Delete" asp-route-id="@Model.AssessmentId" method="post">
        @Html.AntiForgeryToken()
        <div class="mt-4">
            <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
            <a asp-action="List" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>

<style>
    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .text-primary {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .btn-lg {
        padding: 12px 30px;
        font-size: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }

    .list-group-item {
        font-size: 1rem;
        font-weight: 500;
    }

    .list-group {
        margin-top: 15px;
    }

    .text-left {
        text-align: left !important;
    }

    .alert-warning {
        background-color: #ffeeba;
        border-color: #ffeeba;
        color: #856404;
    }
</style>
