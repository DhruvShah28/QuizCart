@model QuizCart.Models.AssessmentDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Confirm Delete</h2>

<p>
    Are you sure you want to delete the assessment:
    <strong>@Model.Title</strong>?
</p>

<div class="alert alert-warning">
    <strong>Warning:</strong> This action is irreversible and will delete the assessment permanently.
</div>

<h5 class="mt-4">Assessment Details:</h5>
<ul class="mb-3">
    <li><strong>Date:</strong> @Model.DateOfAssessment.ToString("yyyy-MM-dd")</li>
    <li><strong>Difficulty:</strong> @Model.DifficultyLevel</li>
    <li><strong>Description:</strong> @Model.Description</li>
    <li><strong>Subject:</strong> @Model.SubjectName</li>
    <li><strong>Members:</strong> @string.Join(", ", Model.MemberNames)</li>
</ul>

<form asp-action="Delete" asp-route-id="@Model.AssessmentId" method="post">
    @Html.AntiForgeryToken()
    <div class="mt-4">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
