@{
    ViewData["Title"] = "Home - QuizCart";
}

<div class="text-center hero-section">
    <h1 class="display-4">Welcome to <span class="logo-name">QuizCart!</span></h1>
    <p class="lead">The ultimate platform for managing purchases, brain foods, ingredients, and assessments for your academic needs.</p>
    <div class="btn-group my-4" role="group">
        <a href="/AssessmentsPage/List" class="btn btn-custom btn-lg">Manage Assessments</a>
        <a href="/PurchasesPage/List" class="btn btn-custom btn-lg">Manage Purchases</a>
        <a href="/BrainFoodsPage/List" class="btn btn-custom btn-lg">Manage Brain Foods</a>
        <a href="/IngredientsPage/List" class="btn btn-custom btn-lg">Manage Ingredients</a>
    </div>
</div>

<section class="features my-5">
    <div class="container">
        <div class="row text-center">
            <!-- Added text-center to align everything in the center -->
            <div class="col-md-3">
                <h3>Manage Assessments</h3>
                <p>Track and manage ingredients used in the brain foods. Add new ingredients, update their details, and more.</p>
            </div>
            <div class="col-md-3">
                <h3>Manage Purchases</h3>
                <p>Efficiently manage purchases, assign them to members, and track purchase details with ease.</p>
            </div>
            <div class="col-md-3">
                <h3>Manage Brain Foods</h3>
                <p>Create and organize brain food entries, link them to ingredients, and track their usage in various purchases.</p>
            </div>
            <div class="col-md-3">
                <h3>Manage Ingredients</h3>
                <p>Track and manage ingredients used in the brain foods. Add new ingredients, update their details, and more.</p>
            </div>
        </div>
    </div>
</section>

<section class="cta bg-dark text-white text-center py-5">
    <h2>Ready to manage your academic content?</h2>
    <p>Click any of the buttons above to manage purchases, brain foods, ingredients, or assessments.</p>
</section>

<style>
    .hero-section {
        background-color: #f8f9fa;
        padding: 60px 0;
        margin-bottom: 40px;
    }

    .logo-name {
        color: #11787f !important;
    }

    .features h3 {
        font-size: 1.5rem;
        font-weight: bold;
        color: #343a40;
    }

    .cta {
        background-color: #343a40;
        color: white;
    }

        .cta a {
            margin-top: 20px;
        }

    .btn-custom {
        margin-bottom: 15px;
        border-radius: 8px;
        padding: 12px 30px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-custom:hover {
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
            transform: translateY(-2px);
        }

        .btn-custom:first-child {
            background-color: #ffc300;
            color: #fff;
            border: none;
        }

        .btn-custom:nth-child(2) {
            background-color: #ff9900;
            color: #fff;
            border: none;
        }

        .btn-custom:nth-child(3) {
            background-color: #ff6a00;
            color: #fff;
            border: none;
        }

        .btn-custom:last-child {
            background-color: #9c4000;
            color: #fff;
            border: none;
        }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .features .col-md-3 {
        margin-bottom: 30px;
        padding-left: 15px;
        padding-right: 15px;
    }

    .cta h2 {
        font-size: 2rem;
        font-weight: bold;
    }

    .cta p {
        font-size: 1rem;
    }
</style>
