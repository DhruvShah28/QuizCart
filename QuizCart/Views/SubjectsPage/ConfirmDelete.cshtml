@model QuizCart.Models.ViewModels.SubjectDetails

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="text-center">
    <h2 class="text-center">Are you sure you want to delete this subject?</h2>
</div>

<div class="text-center mb-4">
    <p class="text-primary">Subject: @Model.Subject.Name</p>
</div>

@if (Model.Assessments != null && Model.Assessments.Any())
{
    <h5 class="mt-4 text-center">This subject has the following assessments linked:</h5>
    <ul class="list-group w-50 mx-auto text-left">
        @foreach (var assessment in Model.Assessments)
        {
            <li class="list-group-item">@assessment.Title</li>
        }
    </ul>
}
else
{
    <p class="text-center">No assessments are currently linked to this subject.</p>
}

<div class="text-center mt-4">
    <form asp-action="Delete" asp-route-id="@Model.Subject.SubjectId" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
        <a asp-action="List" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>

<style>
    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .text-primary {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .btn-lg {
        padding: 12px 30px;
        font-size: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }

    .list-group {
        margin-top: 10px;
    }

    .list-group-item {
        font-size: 1.1rem;
        font-weight: 500;
    }
</style>
