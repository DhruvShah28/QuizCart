@model IEnumerable<QuizCart.Models.SubjectDto>
@{
    ViewData["Title"] = "Subjects";
}
<h2>Subjects</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add Subject</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Total Assessments</th>
            <th>Total Members</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.SubjectId</td>
                <td>@subject.Name</td>
                <td>@subject.Description</td>
                <td>@subject.TotalAssessments</td>
                <td>@subject.TotalMembers</td>
                <td>
                    <a asp-action="Details" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-info">View Details</a>
                    <a asp-action="Edit" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="ConfirmDelete" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
