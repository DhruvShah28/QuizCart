<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizCart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuizCart.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 2rem;
            color: #11787f !important;
        }

        .navbar-nav .nav-link {
            font-weight: normal;
            font-size: 1rem;
        }
        
        .navbar-nav .nav-link:hover {
            color: #ee8822 !important;
        }

        footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
            width: 100%;
        }

            footer a {
                color: #ee8822;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">QuizCart</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li class="nav-item"><a class="nav-link" href="/swagger" target="_blank">API</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="MembersPage" asp-action="List">Members</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SubjectsPage" asp-action="List">Subjects</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="AssessmentsPage" asp-action="List">Assessments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="IngredientsPage" asp-action="List">Ingredients</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="PurchasesPage" asp-action="List">Purchases</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="BrainFoodsPage" asp-action="List">BrainFoods</a></li>
                    </ul>
                        <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top text-muted">
        <div class="container">
            &copy; 2025 - QuizCart - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
