@model QuizCart.Models.UpdateBrainFoodDto
@{
    ViewData["Title"] = "Edit BrainFood";
}

<h2>Edit BrainFood</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BrainFoodId" />

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IngredientId" class="form-label"></label>
        <select asp-for="IngredientId" asp-items="ViewBag.Ingredients" class="form-control"></select>
    </div>

    <div class="mb-3">
        <label asp-for="AssessmentId" class="form-label"></label>
        <select asp-for="AssessmentId" asp-items="ViewBag.Assessments" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
