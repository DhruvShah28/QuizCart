@model QuizCart.Models.BrainFoodDto
@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Confirm Delete</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this BrainFood?
</div>

<div class="mb-3">
    <p><strong>Ingredient:</strong> @Model.IngredientName</p>
    <p><strong>Assessment:</strong> @Model.AssessmentName</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.BrainFoodId" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
