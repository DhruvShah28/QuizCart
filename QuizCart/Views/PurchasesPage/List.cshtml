@model IEnumerable<QuizCart.Models.PurchasesDto>

@{
    ViewData["Title"] = "Purchases List";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="mb-4">
    <a asp-action="Add" class="btn btn-primary btn-lg">Add New Purchase</a>
</div>

<div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Purchase Date</th>
                <th>Member</th>
                <th>Total Amount</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchase in Model)
            {
                <tr>
                    <td>@purchase.PurchaseId</td>
                    <td>@purchase.DatePurchased</td>
                    <td>@purchase.MemberName</td>
                    <td>@purchase.TotalAmount.ToString("C2")</td>
                    <td class="text-center">
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@purchase.PurchaseId">View Details</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@purchase.PurchaseId">Edit</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-danger" asp-action="ConfirmDelete" asp-route-id="@purchase.PurchaseId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    h1 {
        font-size: 2rem;
        color: #343a40;
        font-weight: bold;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
        margin: 5px;
    }

    .btn-lg {
        padding: 12px 24px;
    }

    .table {
        font-size: 1rem;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .btn-primary {
        background-color: #ee8822;
        border: none;
    }

    .btn-primary:hover {
        background-color: #FC9601;
        border: none;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>
