@model IEnumerable<QuizCart.Models.PurchasesDto>

@{
    ViewData["Title"] = "Purchases List";
}

<h2>Purchases</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add New Purchase</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Purchase Date</th>
            <th>Member</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var purchase in Model)
        {
            <tr>
                <td>@purchase.DatePurchased</td>
                <td>@purchase.MemberName</td>
                <td>@purchase.TotalAmount.ToString("C2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@purchase.PurchaseId" class="btn btn-info btn-sm">View Details</a>
                    <a asp-action="Edit" asp-route-id="@purchase.PurchaseId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="ConfirmDelete" asp-route-id="@purchase.PurchaseId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
