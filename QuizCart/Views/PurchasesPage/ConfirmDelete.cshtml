@model QuizCart.Models.PurchasesDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Confirm Delete</h2>

<p class="text-danger">
    Are you sure you want to delete this purchase?
</p>

<hr />

<p><strong>Member:</strong> @Model.MemberName</p>
<p><strong>Date:</strong> @Model.DatePurchased.ToString("yyyy-MM-dd")</p>
<p><strong>Ingredients:</strong> @string.Join(", ", Model.IngredientNames)</p>
<p><strong>Total:</strong> $@Model.TotalAmount.ToString("0.00")</p>

<form asp-action="Delete" asp-route-id="@Model.PurchaseId" method="post">
    @Html.AntiForgeryToken()
    <div class="mt-4">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
