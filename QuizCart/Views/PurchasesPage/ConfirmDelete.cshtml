@model QuizCart.Models.PurchasesDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Confirm Delete</h2>

<p>
    Are you sure you want to delete the purchase made by <strong>@Model.MemberName</strong> on <strong>@Model.DatePurchased.ToString("yyyy-MM-dd")</strong>?
</p>

<div class="alert alert-warning">
    <strong>Warning:</strong> This action is irreversible and will remove the purchase permanently.
</div>

<p><strong>Member:</strong> @Model.MemberName</p>
<p><strong>Date Purchased:</strong> @Model.DatePurchased.ToString("yyyy-MM-dd")</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C2")</p>

<form asp-action="Delete" asp-route-id="@Model.PurchaseId" method="post">
    @Html.AntiForgeryToken()
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
