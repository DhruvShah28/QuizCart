@model QuizCart.Models.ViewModels.UpdatePurchaseViewModel

@{
    ViewData["Title"] = "Edit Purchase";
}

<h2>Edit Purchase</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PurchaseId" />

    <div class="form-group">
        <label asp-for="DatePurchased" class="form-label"></label>
        <input asp-for="DatePurchased" type="date" class="form-control" />
        <span asp-validation-for="DatePurchased" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MemberId" class="form-label">Member</label>
        <select asp-for="MemberId" asp-items="Model.Members" class="form-control">
            <option value="">-- Select Member --</option>
        </select>
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AssessmentId" class="form-label">Assessment</label>
        <select asp-for="AssessmentId" asp-items="Model.Assessments" class="form-control">
            <option value="">-- Select Assessment --</option>
        </select>
        <span asp-validation-for="AssessmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IngredientId" class="form-label">Ingredient</label>
        <select asp-for="IngredientId" asp-items="Model.Ingredients" class="form-control">
            <option value="">-- Select Ingredient --</option>
        </select>
        <span asp-validation-for="IngredientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
