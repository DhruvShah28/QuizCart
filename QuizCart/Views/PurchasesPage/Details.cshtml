@model QuizCart.Models.PurchasesDto

@{
    ViewData["Title"] = "Purchase Details";
}

<h2>Purchase Details</h2>

<hr />
<p><strong>Purchase ID:</strong> @Model.PurchaseId</p>
<p><strong>Date:</strong> @Model.DatePurchased.ToString("yyyy-MM-dd")</p>
<p><strong>Member:</strong> @Model.MemberName</p>
<p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("0.00")</p>
<p><strong>Ingredients:</strong> @string.Join(", ", Model.IngredientNames)</p>

<hr />
<a asp-action="List" class="btn btn-secondary">Back to List</a>
<a asp-action="ConfirmDelete" asp-route-id="@Model.PurchaseId" class="btn btn-danger">Delete</a>
