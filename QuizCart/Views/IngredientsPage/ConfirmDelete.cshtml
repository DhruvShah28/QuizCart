@model QuizCart.Models.IngredientDto
@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Confirm Delete</h2>

<p>
    Are you sure you want to delete the ingredient: <strong>@Model.Name</strong>?
</p>


<div class="alert alert-warning">
    <strong>Warning:</strong> This action is irreversible and will delete the ingredient permanently.
</div>

<p><strong>Benefits:</strong> @Model.Benefits</p>
<p><strong>Unit Price:</strong> $@Model.UnitPrice.ToString("0.00")</p>

<form asp-action="Delete" asp-route-id="@Model.IngredientId" method="post">
    @Html.AntiForgeryToken()
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
