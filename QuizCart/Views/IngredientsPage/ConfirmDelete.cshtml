@model QuizCart.Models.IngredientDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="text-center">
    <h2 class="text-center">Are you sure you want to delete this ingredient?</h2>
</div>

<div class="text-center mb-4">

    <!-- Image preview -->
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="mb-3">
            <img src="@Model.ImagePath" alt="Ingredient Image" style="max-height: 180px;" class="img-thumbnail" />
        </div>
    }

    <p class="text-primary">Name: @Model.Name</p>
    <p class="text-primary">Benefits: @Model.Benefits</p>
    <p class="text-primary">Unit Price: $@Model.UnitPrice.ToString("0.00")</p>
</div>

<div class="text-center">
    <form asp-action="Delete" asp-route-id="@Model.IngredientId" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
        <a asp-action="List" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>

<style>
    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .text-primary {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .btn-lg {
        padding: 12px 30px;
        font-size: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }

    .img-thumbnail {
        max-width: 100%;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 5px;
        background-color: #fff;
    }
</style>
