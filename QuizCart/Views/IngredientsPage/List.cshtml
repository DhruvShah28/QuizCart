@model IEnumerable<QuizCart.Models.IngredientDto>
@{
    ViewData["Title"] = "Ingredients";
}

<h2>All Ingredients</h2>
<a asp-action="Add" class="btn btn-primary mb-3">Add New Ingredient</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Benefits</th>
            <th>Unit Price</th>
            <th>Assessments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Name</td>
                <td>@i.Benefits</td>
                <td>$@i.UnitPrice.ToString("0.00")</td>
                <td>@i.TotalAssessments</td>
                <td>
                    <a asp-action="Details" asp-route-id="@i.IngredientId" class="btn btn-info btn-sm">View Details</a>
                    <a asp-action="Edit" asp-route-id="@i.IngredientId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="ConfirmDelete" asp-route-id="@i.IngredientId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
